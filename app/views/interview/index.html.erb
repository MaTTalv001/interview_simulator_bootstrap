<!-- app/views/interview/index.html.erb -->
<div class="container mt-5">
  <h1 class="mb-4">エンジニア面接シミュレータ</h1>



  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">カスタム面接モード</h5>
      <p class="card-text">GitHubのレポジトリを選択して、AIにより生成された質問で面接をシミュレーションします。</p>
      <%= form_with url: show_interview_path, method: :get, local: true, class: "form-inline" do |form| %>
        <div class="mb-3">
          <%= form.label :repository, 'GitHubリポジトリ:', class: "form-label" %>
          <%= form.select :repository, @repositories.collect { |name, url| [name, url] }, { include_blank: true }, class: "form-select" %>
        </div>
        <%= form.submit "選択", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">汎用面接モード</h5>
      <p class="card-text">事前に設定された質問からランダムに出題されます。すぐに始めたい方に最適です。</p>
      <%= link_to '汎用面接を開始', start_generic_interview_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
